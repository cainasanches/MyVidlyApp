@{
    @model IEnumerable<MyVidlyApp.Models.Customer>

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Customers </h1>

@if (Model.Count() == 0)
{

    <text> No one has rented this movie before</text>

}
else
{
    <table class=" table table-bordered table-hover">
        <thr>
            <tr>
                <th>Customers</th>
            </tr>
        </thr>
        <tbody>

            @foreach (var customer in Model)
            {
                <tr>

                    <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null)</td>

                </tr>

            }

        </tbody>

    </table>
}