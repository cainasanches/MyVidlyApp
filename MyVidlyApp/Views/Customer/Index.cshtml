
@model MyVidlyApp.Models.Customer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var className = Model._lstCustomers.Count > 5 ? "Popular" : null;
}

<h1> Customers </h1>



@if (Model._lstCustomers.Count == 0)
{

    <text> No one has rented this movie before</text>

}
else
{
    <table>

        <tr>
            <th>Customers</th>
        </tr>
        <tr>

            @foreach (var customer in Model._lstCustomers)
            {

                <td>@customer.Name</td>
            }

        </tr>

    </table>
}